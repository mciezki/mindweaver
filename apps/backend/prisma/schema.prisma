generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserType {
  USER
  ADMIN
}

enum ArticleType {
  DRAFT
  PUBLISHED
}

enum ArticleRate {
  LIKE
  DISLIKE
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  surname   String
  birthday  DateTime
  sex       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  type      UserType @default(USER)
  active    Boolean  @default(false)

  profileName  String?
  slug         String? @unique
  description  String? @db.Text
  profileImage String?
  coverImage   String?

  activationTokens                ActivationToken[]
  passwordResetTokens             PasswordResetToken[]
  refreshTokens                   RefreshToken[]
  socialThreads                   SocialThread[]
  userLikes                       SocialThreadLike[]
  userComments                    SocialThreadComment[]
  userCommentsLikes               SocialThreadCommentLike[]
  userPublicationCategories       PublicationCategory[]
  userPublicationArticles         PublicationArticle[]
  userPublicationArticlesComments PublicationArticleComment[]
  userPublicationArticlesRates    PublicationArticleRate[]
}

model ActivationToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  isRevoked Boolean  @default(false)
  createdAt DateTime @default(now())
}

model SocialThread {
  id               String        @id @default(uuid())
  userId           String
  user             User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  content          String?       @db.Text
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  mediaUrls        String[]
  originalThreadId String?
  originalThread   SocialThread? @relation("Shares", fields: [originalThreadId], references: [id], onDelete: SetNull)

  likes    SocialThreadLike[]
  comments SocialThreadComment[]
  shares   SocialThread[]        @relation("Shares")
}

model SocialThreadLike {
  id        String       @id @default(uuid())
  threadId  String
  thread    SocialThread @relation(fields: [threadId], references: [id], onDelete: Cascade)
  userId    String
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime     @default(now())

  @@unique([userId, threadId])
}

model SocialThreadComment {
  id        String       @id @default(uuid())
  threadId  String
  content   String       @db.Text
  thread    SocialThread @relation(fields: [threadId], references: [id], onDelete: Cascade)
  userId    String?
  user      User?        @relation(fields: [userId], references: [id], onDelete: SetNull)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  parentId String?
  parent   SocialThreadComment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies  SocialThreadComment[] @relation("CommentReplies")

  likes SocialThreadCommentLike[]
}

model SocialThreadCommentLike {
  id        String              @id @default(uuid())
  commentId String
  comment   SocialThreadComment @relation(fields: [commentId], references: [id], onDelete: Cascade)
  userId    String
  user      User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime            @default(now())

  @@unique([commentId, userId])
}

model PublicationCategory {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String
  slug        String?
  description String   @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  articles PublicationArticle[]

  @@unique([userId, slug])
}

model PublicationArticle {
  id          String              @id @default(uuid())
  userId      String
  user        User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  categoryId  String
  category    PublicationCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  title       String
  contentHtml String              @db.Text
  coverImage  String?
  status      ArticleType
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  publishedAt DateTime?
  slug        String?             @unique

  comments PublicationArticleComment[]
  rates    PublicationArticleRate[]
}

model PublicationArticleComment {
  id        String             @id @default(uuid())
  articleId String
  article   PublicationArticle @relation(fields: [articleId], references: [id], onDelete: Cascade)
  content   String             @db.Text
  userId    String?
  user      User?              @relation(fields: [userId], references: [id], onDelete: SetNull)
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
}

model PublicationArticleRate {
  id        String             @id @default(uuid())
  articleId String
  article   PublicationArticle @relation(fields: [articleId], references: [id], onDelete: Cascade)
  userId    String
  user      User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  rate      ArticleRate
  createdAt DateTime           @default(now())

  @@unique([userId, articleId])
}
